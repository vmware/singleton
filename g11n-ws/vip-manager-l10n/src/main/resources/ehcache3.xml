<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xmlns:jsr107='http://www.ehcache.org/v3/jsr107'
    xsi:schemaLocation="
        http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
        http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">
        
  <!-- For details about each config item, please refer to official doc: http://www.ehcache.org/documentation/3.6/xml.html -->
  <persistence directory="${user.dir}/ehcache/" />
   <cache-template name="default">        
	   <!--config the type of cache item index and value-->        
	   <key-type>java.lang.String</key-type>      <!--cache item index type, default is java.lang.Object-->        
	   <value-type>com.vmware.vip.common.l10n.source.dto.ComponentSourceDTO</value-type>  <!--cache item value type, default is java.lang.Object-->  
	         
	   <!--config cache expiry-->        
	   <expiry>            
		   <!--<tti unit="minutes">200</tti>   use TTI(time to idle) strategy-->            
		   <ttl unit="minutes">200</ttl>  <!--use TTL(time to live) strategy -->        
	   </expiry>
	   
	  <!--   <eviction-advisor>LRU</eviction-advisor>    -->   
	    
	   <!--config the storage tiers and their capacity-->        
	   <resources>            
		   <heap unit="entries">1000</heap>       <!--cache item count in heap-->            
		   <offheap unit="MB">20</offheap>        <!--speed is lower than heap, but faster than disk -->            
		   <disk unit="MB" persistent="true">100</disk>   <!--disk storage, speed is the lowest-->        
	   </resources>    
   </cache-template>
   

   
   <cache alias="SOURCE" uses-template="default">        
       <expiry>            
		   <none/>      
	   </expiry>  
	   <resources>            
		   <heap unit="entries">10000</heap>       <!--cache item count in heap-->            
		   <offheap unit="MB">20</offheap>        <!--speed is lower than heap, but faster than disk -->            
		   <disk unit="MB" persistent="true">100</disk>   <!--disk storage, speed is the lowest-->        
	   </resources>    
    </cache>
     
   <cache alias="SOURCEBACKUP" uses-template="default">        
    	<expiry>            
		   <none/>      
	   </expiry>  
	   <resources>            
		   <heap unit="entries">10000</heap>       <!--cache item count in heap-->            
		   <offheap unit="MB">1</offheap>        <!--speed is lower than heap, but faster than disk -->            
		   <disk unit="MB" persistent="true">500</disk>   <!--disk storage, speed is the lowest-->        
	   </resources>    
    </cache>
    
</config>
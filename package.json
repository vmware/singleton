{
    "name": "@vip/vip-core-sdk-server",
    "version": "0.1.0",
    "publishConfig": {
        "registry": ""
    },
    "description": "A JavaScript VIP client library for internationalization and localization that leverage data from Singleton service. The library works both for the browser and as a Node.js module.",
    "license": "EPL-2.0",
    "main": "./bundles/vip.core.umd.server.js",
    "module": "./dist/index.js",
    "typings": "./dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com:vmware/singleton.git g11n-js-client"
    },
    "bin": {
        "load-translation": "cli/load-i18n-package.js",
        "collect-source-bundle": "cli/collect-source-bundle.js"
    },
    "keywords": [
        "i18n",
        "l10n",
        "node",
        "VIP"
    ],
    "scripts": {
        "compile": "rimraf dist && tsc -p ./ --outDir dist/",
        "build": "webpack",
        "prepublish": "rimraf dist && tsc -p ./ --outDir dist/ && npm run build",
        "jest": "NODE_ENV=test jest -c jest.config.json",
        "test": "npm run jest "
    },
    "dependencies": {
        "decimal.js-light": "^2.4.1"
    },
    "peerDependencies": {
        "axios": "^0.18.0",
        "superagent": "^3.8.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "@types/node": "^10.11.7",
        "awesome-typescript-loader": "^5.2.1",
        "axios": "^0.18.0",
        "jest": "^24.5.0",
        "ts-jest": "^24.0.0",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-loader": "^3.5.4",
        "typescript": "~3.4.5",
        "typescript-loader": "^1.1.3",
        "typings": "^2.1.1",
        "webpack": "^4.39.1",
        "webpack-cli": "^3.3.0"
    },
    "changelogHistory": [
        {
            "date": "21/07/19",
            "version": "0.1.0",
            "notes": [
                {
                    "description": "An implementation of Singleton JS client."
                }
            ]
        }
    ]
}
